#include <iostream>
#include<string>
using namespace std;

int main() {
long long	int t,count=0;
	cin>>t;
	while(t--)
	{
	    count=0;
	    int size;
	    cin>>size;
	    string str;
	   long long int n=0;
	    cin>>str;
	     for (int i=0;i<str.size();i++)
	    { if(str[i]=='1')
	       n++;
	    }
	    
	   count=(n*(n+1))/2; // nc1 +nc2
	   
	   
	    cout<<count<<endl;
	    
	}
	
	
	
	
	return 0;
}
